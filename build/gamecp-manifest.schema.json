{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "extension_id": { "type": "string" },
    "version": { "type": "string" },
    "name": { "type": "string" },
    "description": { "type": "string" },
    "author": { "type": "string" },
    "entry_point": { "type": "string" },
    "integrity": { "type": "string" },
    "ui_injection": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "method": { "enum": ["MOUNT", "HANDLER", "AUGMENT"] },
          "target": { "type": "string" },
          "component": { "type": "string" },
          "route_path": { "type": "string" },
          "order": { "type": "number" },
          "col_span": { "type": "number", "minimum": 1, "maximum": 3 }
        },
        "required": ["method", "target", "component"]
      }
    }
  }
}
